<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_home_background"
    android:orientation="vertical">

    <RelativeLayout style="@style/HomeActionBarRelaytiveLayout">

        <TextView
            android:id="@+id/home_actionBar_textView"
            style="@style/HomeActionBarTextView" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    style="@style/HomeButtonsRelaytiveLayout"
                    android:layout_gravity="left">

                    <ImageView
                        style="@style/HomeImageViewStyle"
                        android:onClick="onClickEnglish"
                        android:src="@drawable/ic_left_button" />

                    <TextView
                        style="@style/HomeTextViewStyle"
                        android:layout_marginLeft="?android:actionBarSize"
                        android:onClick="onClickEnglish"
                        android:text="@string/english_language"
                        android:textColor="@color/colorRedMaron" />

                </RelativeLayout>

                <RelativeLayout
                    style="@style/HomeButtonsRelaytiveLayout"
                    android:layout_gravity="right">

                    <ImageView
                        style="@style/HomeImageViewStyle"
                        android:onClick="onClickPersion"
                        android:src="@drawable/ic_right_button" />

                    <TextView
                        style="@style/HomeTextViewStyle"
                        android:layout_marginLeft="100dp"
                        android:onClick="onClickPersion"
                        android:text="@string/persian_language"
                        android:textColor="@color/colorDarkBlue" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/HomeButtonsRelaytiveLayout"
                    android:layout_gravity="left">

                    <ImageView
                        style="@style/HomeImageViewStyle"
                        android:onClick="onClickUrdu"
                        android:src="@drawable/ic_left_button" />

                    <TextView
                        style="@style/HomeTextViewStyle"
                        android:layout_marginLeft="?android:actionBarSize"
                        android:onClick="onClickUrdu"
                        android:text="@string/urdu_language"
                        android:textColor="@color/colorRedMaron" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/HomeButtonsRelaytiveLayout"
                    android:layout_gravity="right">

                    <ImageView
                        style="@style/HomeImageViewStyle"
                        android:onClick="onClickArabi"
                        android:src="@drawable/ic_right_button" />

                    <TextView
                        style="@style/HomeTextViewStyle"
                        android:layout_marginLeft="100dp"
                        android:onClick="onClickArabi"
                        android:text="@string/arabic_language"
                        android:textColor="@color/colorDarkBlue" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView style="@style/HomeSawlatText" />

    </LinearLayout>


</LinearLayout>
